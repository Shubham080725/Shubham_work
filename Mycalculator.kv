<GridLayout>:
    rows: 6
    BoxLayout:
        TextInput:
            id: number
            font_size: 32
            multiline: False

    BoxLayout:
        Button:
            text: "7"
            on_press: number.text += self.text
        Button:
            text: "8"
            on_press: number.text += self.text
        Button:
            text: "9"
            on_press: number.text += self.text
        Button:
            text: "+"
            on_press: number.text += self.text

    BoxLayout:
        Button:
            text: "4"
            on_press: number.text += self.text
        Button:
            text: "5"
            on_press: number.text += self.text
        Button:
            text: "6"
            on_press: number.text += self.text
        Button:
            text: "-"
            on_press: number.text += self.text

    BoxLayout:
        Button:
            text: "1"
            on_press: number.text += self.text
        Button:
            text: "2"
            on_press: number.text += self.text
        Button:
            text: "3"
            on_press: number.text += self.text
        Button:
            text: "*"
            on_press: number.text += self.text

    BoxLayout:
        Button:
            text: "AC"
            on_press: number.text = ""
        Button:
            text: "0"
            on_press: number.text += self.text
        Button:
            text: "="
            on_press: calculator.calculate(number.text)
        Button:
            text: "/"
            on_press: number.text += self.text
